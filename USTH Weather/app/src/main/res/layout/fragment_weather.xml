<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_100"
    tools:context=".WeatherFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/frame"
        android:scaleType="fitXY"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/weather_height"
        android:src="@drawable/sun"
        android:layout_centerInParent="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/today"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/weather_text1_margin_top"
        android:layout_marginStart="@dimen/weather_text1_margin_start"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hanoi"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/weather_text2_margin_top"
        android:layout_marginEnd="@dimen/weather_text2_margin_end"/>

</RelativeLayout>